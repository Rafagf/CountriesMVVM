<resources>
    <style name="CountriesToolBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">?attr/countriesToolbarColorText</item>
        <item name="android:background">?attr/countriesColorPrimary</item>
    </style>

    <style name="CountryTextTitle">
        <item name="android:textColor">?attr/countriesColorText</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CountryTextSubTitle">
        <item name="android:textColor">?attr/countriesColorText</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MaterialSearchView">
        <item name="android:textColor">?attr/countriesToolbarColorText</item>
        <item name="android:textColorHint">?attr/countriesToolbarColorText</item>
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close_inverted</item>
        <item name="searchBackIcon">@drawable/ic_action_navigation_arrow_back_inverted</item>
        <item name="searchBackground">?attr/countriesColorPrimary</item>
    </style>

    <style name="ErrorTitle">
        <item name="android:textColor">?attr/countriesColorText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ErrorBody">
        <item name="android:textColor">?attr/countriesColorText</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
