<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Dark">
        <item name="countriesColorPrimary">@color/blue_dark</item>
        <item name="countriesColorSecondary">@color/pink</item>
        <item name="countriesColorBackground">@color/black</item>
        <item name="countriesColorPrimaryInverse">@color/blue_sky</item>
        <item name="countriesColorText">@color/white</item>
        <item name="flagPlaceHolderBackground">@color/grey_dark</item>
    </style>

    <style name="Light">
        <item name="countriesColorPrimary">@color/blue_sky</item>
        <item name="countriesColorSecondary">@color/pink</item>
        <item name="countriesColorBackground">@color/white</item>
        <item name="countriesColorPrimaryInverse">@color/blue_dark</item>
        <item name="countriesColorText">@color/white</item>

        <item name="flagPlaceHolderBackground">@color/grey_clear</item>


    </style>

</resources>
